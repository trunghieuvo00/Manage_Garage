@model BrotherGara.Models.PHIEUTHUTIEN

@{
    ViewBag.Title = "Thêm phiếu thu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-center font-weight-bold" style="color: black">Thêm phiếu thu</h1>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="width: 500px; display: block; margin:auto">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-md-12">
                Mã phiếu thu tiền
                <div class="">
                    @Html.EditorFor(model => model.MaPTT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaPTT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-12">
                Mã phiếu sửa chửa
                <div class="">
                    @Html.DropDownList("MaPSC", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaPSC, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-12">
                Ngày thu tiền
                <div class="">
                    @Html.EditorFor(model => model.NgayThuTien, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local"} })
                    @Html.ValidationMessageFor(model => model.NgayThuTien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-12">
                Số tiền thu
                <div class="">
                    @Html.EditorFor(model => model.SoTienThu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoTienThu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-12 d-flex justify-content-lg-center">
                <div class="m-2">
                    <input type="submit" value="Tạo" class="btn btn-success" style="width: 100px" />
                </div>
                <div class="m-2">
                    @Html.ActionLink("Hủy", "Index", null, new {@class= "btn btn-danger", @style = "width: 100px" })
                </div>
            </div>
        </div>
    }
</div>