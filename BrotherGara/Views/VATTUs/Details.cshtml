@model BrotherGara.Models.VATTU

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width: 500px; margin: auto">
    <h3 style="text-align: center">Chi tiết vật tư</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã vật tư
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaVatTu)
        </dd>

        <dt>
            Tên vật tư
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenVatTu)
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Đơn giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DonGia)
        </dd>

    </dl>
    <div class="d-flex justify-content-center">
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-success m-2 brighter", @style = "width: 150px; color:azure; background-color: #61a0ed" })
    </div>
</div>