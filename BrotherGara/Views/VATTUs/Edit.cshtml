@model BrotherGara.Models.VATTU

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal w-50 m-auto">
        <h3 style="text-align: center">Thay đổi giá trị</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaVatTu)

        <div class="form-group">
            <div class="control-label col-md-10">
                Mã vật tư
            </div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.MaVatTu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaVatTu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-10">
                Tên vật tư
            </div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.TenVatTu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenVatTu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-10">
                Số lượng
            </div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-10">
                Đơn giá
            </div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12" style="display: flex; flex-direction: row; justify-content: center">
            <div style="display: inline">
                <input type="submit" value="Lưu" class="btn btn-success m-2 brighter" style="width: 150px; color:azure; background-color: #61a0ed" />
            </div>
            <div style="display: inline">
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-success m-2 brighter", @style = "width: 150px; color:azure; background-color: #ed4747" })
            </div>
        </div>
    </div>
}
