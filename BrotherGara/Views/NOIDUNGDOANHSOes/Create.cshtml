@model BrotherGara.Models.NOIDUNGDOANHSO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="width: 500px; display: block; margin:auto">
        <h1 class="text-center font-weight-bold" style="color: black">Thêm phiếu tiếp nhận</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-12">Mã tháng năm</div>
            <div class="col-md-12">
                @Html.DropDownList("MaPDS", null, htmlAttributes: new { @class = "form-control", @readonly = true })
                @Html.ValidationMessageFor(model => model.MaPDS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-12">Mã phiếu sửa chửa</div>
            <div class="col-md-12">
                @Html.DropDownList("MaPTT", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaPDS, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-12">Hiệu xe</div>
            <div class="col-md-12">
                @Html.DropDownList("MaHieuXe", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaHieuXe, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group col-md-12 d-flex justify-content-lg-center">
        <div class="m-2">
            <input type="submit" value="Tạo" class="btn btn-success" style="width: 100px" />
        </div>
        <div class="m-2">
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-danger", @style = "width: 100px" })
        </div>
    </div>
}
