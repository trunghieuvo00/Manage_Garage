@model BrotherGara.Models.TIEPNHAN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-center font-weight-bold" style="color: black">Thêm phiếu tiếp nhận</h1>
    <h1>@ViewBag.id_phieu</h1>

    @if (ViewBag.loi == true)
    {
        <div class="form-horizontal" style="width: 500px; display: block; margin:auto">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="alert alert-danger" role="alert">
                    <b>Lỗi.</b> Số xe tiếp nhận trong ngày đã đạt tối đa!
                </div>
            </div>
            <div class="form-group col-md-12 d-flex justify-content-lg-center">
                <div class="m-2">
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-success", @style = "width: 100px" })
                </div>
            </div>
        </div>
    }
    else
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="width: 500px; display: block; margin:auto">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="control-label col-md-12">Mã phiếu tiếp nhận</div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.MaTiepNhan, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.MaTiepNhan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-12">Biển số</div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.BienSo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BienSo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-12">Tên chủ xe</div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TenChuXe, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenChuXe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-12">Hiệu xe</div>
                    <div class="col-md-12">
                        @Html.DropDownList("MaHieuXe", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaHieuXe, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-12">Ngày tiếp nhận</div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.NgayTiepNhan, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                        @Html.ValidationMessageFor(model => model.NgayTiepNhan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-12">Địa chỉ</div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-label col-md-12">Điện thoại</div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-12">Email</div>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-12 d-flex justify-content-lg-center">
                    <div class="m-2">
                        <input type="submit" value="Tạo" class="btn btn-success" style="width: 100px" />
                    </div>
                    <div class="m-2">
                        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-danger", @style = "width: 100px" })
                    </div>
                </div>
            </div>
        }
    }
</div>
