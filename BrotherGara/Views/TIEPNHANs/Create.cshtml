@model BrotherGara.Models.TIEPNHAN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal w-50 m-auto">
        <h3 style="text-align: center">Thêm phiếu tiếp nhận</h3>
        <hr />
        @if (ViewBag.loi)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Lỗi!</strong> Số xe sửa trong ngày không được vượt quá quy định
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="form-group col-md-12" style="display: flex; flex-direction: row; justify-content: center">
                <div style="display: inline">
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-success m-2 brighter", @style = "width: 150px; color:azure; background-color: #61a0ed" })
                </div>
            </div>
        }
        else
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-10">
                    Mã tiếp nhận
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.MaTiepNhan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaTiepNhan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10">
                    Biển số
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.BienSo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BienSo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10">
                    Tên chủ xe
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenChuXe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenChuXe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10">
                    Mã hiệu xe
                </div>
                <div class="col-md-12">
                    @Html.DropDownList("MaHieuXe", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaHieuXe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10">
                    Địa chỉ
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10">
                    Điện thoại
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10">
                    Ngày tiếp nhận
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.NgayTiepNhan, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                    @Html.ValidationMessageFor(model => model.NgayTiepNhan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10">
                    Tiền nợ
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TienNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TienNo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-10">
                    Email
                </div>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-12" style="display: flex; flex-direction: row; justify-content: center">
                <div style="display: inline">
                    <input type="submit" value="Tạo" class="btn btn-success m-2 brighter" style="width: 150px; color:azure; background-color: #61a0ed" />
                </div>
                <div style="display: inline">
                    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-success m-2 brighter", @style = "width: 150px; color:azure; background-color: #ed4747" })
                </div>
            </div>
        }
    </div>
}



