@model BrotherGara.Models.PHIEUNHAPKHO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal w-50 m-auto">
        <h3 style="text-align: center">Thêm phiếu nhập kho</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-10">
                Mã phiếu nhập kho
            </div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.MaPNK, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                @Html.ValidationMessageFor(model => model.MaPNK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-10">
                Ngày nhập kho
            </div>
            <div class="col-md-12">
                @Html.EditorFor(model => model.NgayNhapKho, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local"} })
                @Html.ValidationMessageFor(model => model.NgayNhapKho, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12" style="display: flex; flex-direction: row; justify-content: center">
            <div style="display: inline">
                <input type="submit" value="Tạo" class="btn btn-success m-2 brighter" style="width: 150px; color:azure; background-color: #61a0ed" />
            </div>
            <div style="display: inline">
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-success m-2 brighter", @style = "width: 150px; color:azure; background-color: #ed4747" })
            </div>

        </div>
    </div>
}

