@model BrotherGara.Models.PHIEUNHAPKHO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal w-50 m-auto">
        <h3 style="text-align: center">Chỉnh sửa phiếu nhập kho</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaPNK)

        <div class="form-group">
            <div class="control-label col-md-10">
                Ngày nhập kho
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayNhapKho, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayNhapKho, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-10">
                Tổng chi
            </div>
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.TongChi, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.DisplayFor(model => model.TongChi)
                @Html.ValidationMessageFor(model => model.TongChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12" style="display: flex; flex-direction: row; justify-content: center">
            <div style="display: inline">
                <input type="submit" value="Lưu" class="btn btn-success m-2 brighter" style="width: 150px; color:azure; background-color: #61a0ed" />
            </div>
            <div style="display: inline">
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-success m-2 brighter", @style = "width: 150px; color:azure; background-color: #ed4747" })
            </div>
        </div>
    </div>
}

