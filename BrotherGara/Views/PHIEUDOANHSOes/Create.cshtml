@model BrotherGara.Models.PHIEUDOANHSO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="width: 500px; display: block; margin:auto">
    <h1 class="text-center font-weight-bold" style="color: black">Thêm phiếu doanh số</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-12">Mã tháng năm</div>
        <div class="col-md-12">
            @Html.DropDownList("MaTN", ViewBag.MaTN as SelectList, htmlAttributes: new { @class = "form-control", @readonly = true })
            @Html.ValidationMessageFor(model => model.MaTN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group col-md-12 d-flex justify-content-lg-center">
        <div class="m-2">
            <input type="submit" value="Tạo" class="btn btn-success" style="width: 100px" />
        </div>
        <div class="m-2">
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-danger", @style = "width: 100px" })
        </div>
    </div>
    </div>
}