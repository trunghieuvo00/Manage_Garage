@model IEnumerable<BrotherGara.Models.PHIEUTHUTIEN>

@{
    ViewBag.Title = "Phiếu Thu Tiền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<button class="btn btn-success ml-4 mb-3 brighter" style="width: 250px; color:azure; background-color: #61a0ed">
    <i class="fas fa-plus" style="color: azure">
        @Html.ActionLink("Thêm phiếu thu", "Create", null, new { @style = "color: #ffffff; font-family: Nunito;" })
    </i>
</button>
<div id="content">
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h3 class="m-0 font-weight-bold text-primary">Danh sách phiếu thu tiền</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Mã phiếu thu
                                </th>
                                <th>
                                    Mã sửa chửa
                                </th>
                                <th>
                                    Ngày thu tiền
                                </th>
                                <th>
                                    Số tiền thu
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaPTT)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaPSC)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayThuTien)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoTienThu)
                                    </td>
                                    @*<td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.MaPTT }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.MaPTT })
                                        </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

</div>
