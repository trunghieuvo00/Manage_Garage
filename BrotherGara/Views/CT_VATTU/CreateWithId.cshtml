@model BrotherGara.Models.CT_VATTU

@{
    ViewBag.Title = "Thêm chi tiết vật tư"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="text-center font-weight-bold" style="color: black">Thêm chi tiết vật tư</h1>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="width: 500px; display: block; margin:auto">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="control-label col-md-12">Mã chi tiết vật tư</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaCTVT, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    @Html.ValidationMessageFor(model => model.MaCTVT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-12">Mã phiếu sửa chữa</div>
                <div class="col-md-10">
                    @Html.DropDownList("MaPSC", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaPSC, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-12">Mã vật tư</div>
                <div class="col-md-10">
                    @Html.DropDownList("MaVatTu", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaVatTu, "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="form-group">
                <div class="control-label col-md-12">Đơn giá</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                </div>
            </div>*@

            <div class="form-group">
                <div class="control-label col-md-12">Số lượng</div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="display: block; margin: auto">
                    <input type="submit" value="Create" class="btn btn-default" />
                    @Html.ActionLink("Quay lại", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-primary" })
                </div>

            </div>
        </div>
    }
</div>